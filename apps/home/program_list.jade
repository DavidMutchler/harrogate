mixin app(name, icon, fonticon, descr, url)
  div(class='media')
    div(class=['media-left', 'media-middle'])
      a(href='#{url}')
        - if(icon === undefined)
          i(class=['fa', '#{fonticon}', 'fa-4x', 'fa-fw'])
        - else
          img(class='media-object', src='#{icon}', width=64, height=64)
    div(class='media-body')
      a(href='#{url}')
        h4(class='media-heading') #{name}
      p #{descr}
mixin app_group(name)
  h2 #{name}


- for(c in apps) {
- console.log(c);
+app_group(c)
- var lists = {};
- for(var j = 0; j < Math.ceil(apps[c].length / 2); ++j) lists[j] = {};
- for(var j = 0; j < apps[c].length; ++j) lists[Math.floor(j / 2)][Math.floor(j % 2)] = apps[c][j];
- console.log(lists);
- for(l in Object.keys(lists)) {
div(class='row')
  - for(a in Object.keys(lists[l])) {
  div(class='col-sm-6')
    +app(lists[l][a]['name'], lists[l][a]['icon'], lists[l][a]['fonticon'], lists[l][a]['description'], lists[l][a]['url'])
  - }
- }
- }