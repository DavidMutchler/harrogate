extends ../../../shared/client/views/templates/app-view-layout.jade

block view-toolbar-left
  .btn-group
    button.btn.btn-toolbar.btn-default(type='button' ng-class='{"btn-primary": show_wifi}' ng-click='show_wifi = true')
      i.fa.fa-wifi
      br
      small.small Wifi Configuration
    button.btn.btn-toolbar.btn-default(type='button' ng-class='{"btn-primary": !show_wifi}' ng-click='show_wifi = false')
      i.fa.fa-plug
      br
      small.small IP Configuration

block view-content
  .row.row-stretch(ng-if='show_wifi')
    .col-xs-6.col-stretch
      .panel.panel-primary.panel-stretch
        .panel-heading
          .panel-title
            | Wireless Networks
            
        .scrollable-panel-body-container
          .list-group.panel-body
            a.list-group-item Wireless Network I
            a.list-group-item Wireless Network II
            a.list-group-item Wireless Network III
            a.list-group-item Wireless Network IV
            
    .col-xs-6.col-stretch
      .panel.panel-primary.panel-stretch
        .panel-heading
          .panel-title
            | Join Wireless Network
            
        .scrollable-panel-body-container
          .panel-body
            .form-group
              label.desktop-only Network Name
              input.form-control.desktop-only(type='text' readonly)
              
              label Security
              select.form-control
                option None
                option WEP
                option WPA
                option WPA2

              label Password
              input.form-control(type='password')

            button.btn.btn-success(type='button')
              | Join
              
  .row.row-stretch(ng-if='!show_wifi')
    .col-xs-6.col-stretch
      .panel.panel-primary.panel-stretch
        .panel-heading
          .panel-title
            | Network Interfaces
            
        .scrollable-panel-body-container
          .list-group.panel-body
            a.list-group-item Wireless Interface
            a.list-group-item USB Ethernet Interface
            
    .col-xs-6.col-stretch
      .panel.panel-primary.panel-stretch
        .panel-heading
          .panel-title
            | Interface Configuration
            
        .scrollable-panel-body-container
          .panel-body
            .form-group
              label.desktop-only Network Interfaces
              input.form-control.desktop-only(type='text' readonly)
              
              label IP Address
              input.form-control(type='text')
              
              label Subnet Mask
              input.form-control(type='text')
              
              label Default Gateway
              input.form-control(type='text')

            button.btn.btn-success(type='button')
              | Set

block bottom-compact-navbar-buttons
  a.btn.btn-toolbar.btn-info(type='button' ng-class='{"btn-primary": show_wifi}' ng-click='show_wifi = true')
    i.fa.fa-wifi
    |  
    small.small Wifi Configuration
  a.btn.btn-toolbar.btn-info(type='button' ng-class='{"btn-primary": !show_wifi}' ng-click='show_wifi = false')
    i.fa.fa-plug
    |  
    small.small IP Configuration
