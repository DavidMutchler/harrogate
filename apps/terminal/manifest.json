{
  "name": "Terminal",
  "priority": -1,
  "fonticon": "fa-terminal",
  "exec": "exec.coffee",
  "description": "Opens a terminal to the target",
  "category": "System",
  "angular_ctrl": "resources/terminal-view-controller.coffee",
  "event_groups": {
    "terminal_events": {
      "namespace": "/terminal",
      "on_connection": "terminal_on_connection",
      "events": {
        "stdin": {
          "id": "stdin",
          "publisher": "CLIENT",
          "description": "stdin sent to the terminal."
        },
        "stdout": {
          "id": "stdout",
          "publisher": "SERVER",
          "description": "stdout sent from the terminal."
        },
        "stderr": {
          "id": "stderr",
          "publisher": "SERVER",
          "description": "stderr sent from the terminal."
        },
        "restart": {
          "id": "restart",
          "publisher": "CLIENT",
          "description": "Restart the terminal session."
        }
      }
    }
  }
}