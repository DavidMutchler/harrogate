extends ../../../shared/client/views/templates/app-view-layout.jade

block view-content
  .row(ng-show="current_user")
    .col-md-4
      .row.desktop-only
        .col-xs-3
        .col-xs-2
            i.fa.fa-5x.fa-user
        .col-xs-5
            h1 {{current_user.login}}
      .row.desktop-only
        .col-xs-5
        .col-xs-5
          button.btn.btn-default.bnt-lg(type='button' ng-click='logout()')
            i.fa.fa-sign-out
            |  
            | Logout {{current_user.login}}

    .col-md-8
      h2  User Preferences
      .panel.panel-default
        .panel-body
          .panel-group
            .panel.panel-default
              .panel-heading
                .h3.panel-title Workspace

              .panel-body
                .form-group
                  label Path
                  input.form-control(type='text' readonly ng-attr-id="path" value="{{current_user.preferences.workspace.path}}")

  .row(ng-show="!current_user")
    .col-xs-1.col-md-3
    .col-xs-10.col-md-6
      .alert.alert-warning
        p
          strong Login required!
        p.desktop-only Please authenticate yourself with your username and password

  .row(ng-show="!current_user")
    .col-xs-1.col-md-3
    .col-xs-10.col-md-6
      .panel.panel-default
        form.panel-body
          .form-group
            label(for='username') Username
            input.form-control#username(type='text' placeholder='Username' ng-model='username')
          .form-group
            label(for='password') Password
            input.form-control#password(type='password' placeholder='Password' ng-model='password')
          button.btn.btn-default(ng-click='login()')
            i.fa.fa-sign-in
            |  
            | Login


block bottom-compact-navbar-buttons
  a.btn.btn-toolbar.btn-info(type="button" ng-show="current_user" ng-click='logout()')
    i.fa.fa-bars
    |  
    small.small Logout {{current_user.login}}
  a.btn.btn-toolbar.btn-info.disabled(type="button" ng-show="!current_user")
  a.btn.btn-toolbar.btn-info.disabled(type="button")
  a.btn.btn-toolbar.btn-info.disabled(type="button")