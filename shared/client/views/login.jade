doctype html
html(lang="en")
  head
    title= pageTitle
    include includes/styles.jade

  body
    div(class='container', style='margin-top: 20px')
      div(class=['col-md-6', 'col-md-offset-3'])
        i(class=['fa', 'fa-user-secret', 'fa-fw', 'fa-4x'], style='display:block; margin-left: auto; margin-right: auto; margin-bottom: 20px')
        - if(retry === true) {
        p Sorry, the password you entered was not correct. Try again.
        - }
        form(action='/login', method='POST')
          div(class='input-group')
            input(type='password', name='password', class='form-control', placeholder='Password', aria-describedby='addon-login')
            div(class='input-group-btn')
              button(type='submit', class=['btn', 'btn-default', 'btn-primary'], aria-expanded='false') Login

    include includes/footer.jade
    include includes/scripts.jade